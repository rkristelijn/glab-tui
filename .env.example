# GitLab Configuration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# Project Selection (choose one approach):

# Option 1: Monitor specific group (recommended for 900 projects)
GITLAB_GROUP_ID=12345
# GITLAB_GROUP_PATH=your-org/your-group

# Option 2: Monitor multiple specific projects
# GITLAB_PROJECT_IDS=123,456,789,101112

# Option 3: Monitor projects by pattern
# GITLAB_PROJECT_PATTERN=frontend-*,backend-*

# Filtering
MAX_PROJECTS=50
SHOW_ARCHIVED=false
MIN_ACTIVITY_DAYS=30

# UI Configuration
REFRESH_INTERVAL=5s
MAX_PIPELINES_PER_PROJECT=10
